{
  "description": "Sample W3C Verifiable Credential payloads for CREDEBL",
  "important_notes": [
    "Always use 'https://www.w3.org/2018/credentials/examples/v1' as the second context",
    "Do NOT use 'https://w3id.org/security/suites/ed25519-2018/v1' - it causes JSON-LD conflicts",
    "Use 'Ed25519Signature2018' proof type with did:key credentials",
    "Set 'autoAcceptCredential': 'always' for seamless issuance"
  ],
  "credentials": {
    "employment_credential": {
      "description": "Standard employment credential",
      "payload": {
        "connectionId": "{{CONNECTION_ID}}",
        "protocolVersion": "v2",
        "credentialFormats": {
          "jsonld": {
            "credential": {
              "@context": [
                "https://www.w3.org/2018/credentials/v1",
                "https://www.w3.org/2018/credentials/examples/v1"
              ],
              "type": ["VerifiableCredential", "EmploymentCredential"],
              "issuer": "{{ISSUER_DID}}",
              "issuanceDate": "{{ISSUANCE_DATE}}",
              "credentialSubject": {
                "id": "{{HOLDER_DID}}",
                "employeeOf": {
                  "name": "Acme Corporation",
                  "position": "Software Engineer",
                  "department": "Engineering",
                  "startDate": "2024-01-01"
                }
              }
            },
            "options": {
              "proofType": "Ed25519Signature2018",
              "proofPurpose": "assertionMethod"
            }
          }
        },
        "autoAcceptCredential": "always"
      }
    },
    "university_degree": {
      "description": "University degree credential",
      "payload": {
        "connectionId": "{{CONNECTION_ID}}",
        "protocolVersion": "v2",
        "credentialFormats": {
          "jsonld": {
            "credential": {
              "@context": [
                "https://www.w3.org/2018/credentials/v1",
                "https://www.w3.org/2018/credentials/examples/v1"
              ],
              "type": ["VerifiableCredential", "UniversityDegreeCredential"],
              "issuer": "{{ISSUER_DID}}",
              "issuanceDate": "{{ISSUANCE_DATE}}",
              "credentialSubject": {
                "id": "{{HOLDER_DID}}",
                "degree": {
                  "type": "BachelorDegree",
                  "name": "Bachelor of Science in Computer Science",
                  "university": "Example University",
                  "graduationDate": "2023-05-15"
                }
              }
            },
            "options": {
              "proofType": "Ed25519Signature2018",
              "proofPurpose": "assertionMethod"
            }
          }
        },
        "autoAcceptCredential": "always"
      }
    },
    "membership_credential": {
      "description": "Organization membership credential",
      "payload": {
        "connectionId": "{{CONNECTION_ID}}",
        "protocolVersion": "v2",
        "credentialFormats": {
          "jsonld": {
            "credential": {
              "@context": [
                "https://www.w3.org/2018/credentials/v1",
                "https://www.w3.org/2018/credentials/examples/v1"
              ],
              "type": ["VerifiableCredential", "MembershipCredential"],
              "issuer": "{{ISSUER_DID}}",
              "issuanceDate": "{{ISSUANCE_DATE}}",
              "credentialSubject": {
                "id": "{{HOLDER_DID}}",
                "membership": {
                  "organization": "Professional Association",
                  "membershipType": "Premium",
                  "memberSince": "2024-01-01",
                  "validUntil": "2025-12-31",
                  "memberId": "MEM-2024-001234"
                }
              }
            },
            "options": {
              "proofType": "Ed25519Signature2018",
              "proofPurpose": "assertionMethod"
            }
          }
        },
        "autoAcceptCredential": "always"
      }
    },
    "certificate_credential": {
      "description": "Professional certificate credential",
      "payload": {
        "connectionId": "{{CONNECTION_ID}}",
        "protocolVersion": "v2",
        "credentialFormats": {
          "jsonld": {
            "credential": {
              "@context": [
                "https://www.w3.org/2018/credentials/v1",
                "https://www.w3.org/2018/credentials/examples/v1"
              ],
              "type": ["VerifiableCredential", "CertificateCredential"],
              "issuer": "{{ISSUER_DID}}",
              "issuanceDate": "{{ISSUANCE_DATE}}",
              "credentialSubject": {
                "id": "{{HOLDER_DID}}",
                "certificate": {
                  "name": "AWS Solutions Architect",
                  "issuer": "Amazon Web Services",
                  "dateIssued": "2024-06-15",
                  "expirationDate": "2027-06-15",
                  "certificateId": "AWS-SA-2024-ABC123"
                }
              }
            },
            "options": {
              "proofType": "Ed25519Signature2018",
              "proofPurpose": "assertionMethod"
            }
          }
        },
        "autoAcceptCredential": "always"
      }
    },
    "identity_credential": {
      "description": "Basic identity credential",
      "payload": {
        "connectionId": "{{CONNECTION_ID}}",
        "protocolVersion": "v2",
        "credentialFormats": {
          "jsonld": {
            "credential": {
              "@context": [
                "https://www.w3.org/2018/credentials/v1",
                "https://www.w3.org/2018/credentials/examples/v1"
              ],
              "type": ["VerifiableCredential", "PersonalIdentityCredential"],
              "issuer": "{{ISSUER_DID}}",
              "issuanceDate": "{{ISSUANCE_DATE}}",
              "credentialSubject": {
                "id": "{{HOLDER_DID}}",
                "givenName": "John",
                "familyName": "Doe",
                "dateOfBirth": "1990-01-15",
                "nationality": "US"
              }
            },
            "options": {
              "proofType": "Ed25519Signature2018",
              "proofPurpose": "assertionMethod"
            }
          }
        },
        "autoAcceptCredential": "always"
      }
    }
  },
  "context_compatibility": {
    "working_contexts": [
      {
        "context": "https://www.w3.org/2018/credentials/examples/v1",
        "compatible_with": ["Ed25519Signature2018"],
        "notes": "Recommended - works without conflicts"
      }
    ],
    "problematic_contexts": [
      {
        "context": "https://w3id.org/security/suites/ed25519-2018/v1",
        "issue": "Causes 'protected term redefinition' error for Ed25519Signature2018",
        "workaround": "Use examples/v1 context instead"
      },
      {
        "context": "https://w3id.org/security/suites/ed25519-2020/v1",
        "issue": "Requires Ed25519VerificationKey2020, not compatible with standard did:key",
        "workaround": "Use Ed25519Signature2018 with examples/v1 context"
      }
    ]
  }
}
